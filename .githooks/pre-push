#!/bin/bash
# Pre-push hook for Bond Pipeline Project
# Runs tests before allowing push
# Created: October 24, 2025
# Last Updated: October 24, 2025

set -e

echo "ğŸš€ Running pre-push checks..."
echo ""

# 1. Run unit tests
echo "ğŸ§ª Running unit tests..."
if command -v pytest &> /dev/null; then
    if [[ -d "tests/unit" ]]; then
        if pytest tests/unit/ -v --tb=short 2>&1 | tee /tmp/pytest_output.txt; then
            echo "âœ… All unit tests passed"
        else
            echo ""
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            echo "âŒ Unit tests failed!"
            echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
            echo ""
            echo "Fix failing tests before pushing:"
            grep "FAILED" /tmp/pytest_output.txt || true
            echo ""
            exit 1
        fi
    else
        echo "âš ï¸  No tests/unit directory found"
    fi
else
    echo "âš ï¸  pytest not installed, skipping tests"
    echo "   Install: pip install pytest"
fi
echo ""

# 2. Check test coverage
echo "ğŸ“Š Checking test coverage..."
if command -v pytest &> /dev/null && command -v coverage &> /dev/null; then
    if [[ -d "tests/unit" ]]; then
        coverage_output=$(pytest --cov=bond_pipeline --cov-report=term-missing tests/unit/ 2>&1 || true)
        coverage=$(echo "$coverage_output" | grep "TOTAL" | awk '{print $NF}' | sed 's/%//' || echo "0")
        
        if [[ -n "$coverage" ]] && [[ $(echo "$coverage >= 80" | bc -l 2>/dev/null || echo "1") -eq 1 ]]; then
            echo "âœ… Test coverage: ${coverage}%"
        elif [[ -n "$coverage" ]]; then
            echo "âš ï¸  WARNING: Test coverage is ${coverage}% (target: 85%)"
            echo "   Consider adding more tests"
            # Don't fail, just warn
        else
            echo "â„¹ï¸  Could not determine coverage"
        fi
    fi
else
    echo "âš ï¸  pytest or coverage not installed, skipping coverage check"
    echo "   Install: pip install pytest pytest-cov"
fi
echo ""

# 3. Check if pipeline can run (smoke test)
echo "ğŸ”¥ Running pipeline smoke test..."
if [[ -f "bond_pipeline/pipeline.py" ]]; then
    if python3 -c "from bond_pipeline import pipeline; print('âœ… Pipeline imports OK')" 2>&1; then
        echo "âœ… Pipeline module loads successfully"
    else
        echo "âŒ Pipeline import failed!"
        echo "   Fix import errors before pushing"
        exit 1
    fi
else
    echo "âš ï¸  bond_pipeline/pipeline.py not found"
fi
echo ""

# 4. Check for merge conflicts
echo "ğŸ”€ Checking for merge conflict markers..."
conflict_markers=$(git diff --cached | grep -E "^(\<\<\<\<\<\<\<|\>\>\>\>\>\>\>|=======)" || true)
if [[ -n "$conflict_markers" ]]; then
    echo "âŒ ERROR: Merge conflict markers found!"
    echo "   Resolve conflicts before pushing"
    exit 1
fi
echo "âœ… No merge conflicts"
echo ""

# 5. Check branch name
echo "ğŸŒ¿ Checking branch..."
current_branch=$(git rev-parse --abbrev-ref HEAD)
echo "   Current branch: $current_branch"

if [[ "$current_branch" == "main" ]] || [[ "$current_branch" == "master" ]]; then
    echo "âš ï¸  WARNING: Pushing directly to $current_branch"
    echo "   Consider using feature branches for development"
    # Don't fail, just warn
fi
echo ""

# 6. Check for uncommitted changes
echo "ğŸ“ Checking for uncommitted changes..."
if [[ -n $(git status --porcelain) ]]; then
    echo "âš ï¸  WARNING: You have uncommitted changes"
    git status --short
    echo ""
    echo "   Consider committing or stashing before pushing"
    # Don't fail, just warn
else
    echo "âœ… No uncommitted changes"
fi
echo ""

# 7. Verify requirements.txt is up to date
echo "ğŸ“¦ Checking requirements.txt..."
if [[ -f "requirements.txt" ]]; then
    if git diff --cached --name-only | grep -q "requirements.txt"; then
        echo "âœ… requirements.txt is being updated"
    elif git diff --cached --name-only | grep -q "\.py$"; then
        echo "â„¹ï¸  Python files changed, verify requirements.txt is current"
    fi
else
    echo "âš ï¸  No requirements.txt found"
fi
echo ""

echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "âœ… All pre-push checks passed!"
echo "ğŸš€ Pushing to remote..."
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""

